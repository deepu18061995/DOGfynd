<%include ./partials/header%>
<div class="container">
    <h2 style="text-align:center; margin:60px 20px 20px 20px;">Add New Comment</h2>
    <div style="width:40%; margin:0 auto;">
    <form action="/home/<%=dog._id%>/comment" method="post">
      

      <div class="form-group">
        <input type="text" class="form-control" placeholder="Name" name="comment[author]" required>
    
      </div>

      <div class="form-group">
        <input type="text" class="form-control" placeholder="Comment" name="comment[text]" required>
        
      </div>
      

      
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      <p class="mt-5 mb-3 text-muted text-center">&copy; 2018-2019</p>
    </form>
    </div>
</div> 